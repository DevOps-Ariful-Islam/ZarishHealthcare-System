# ZarishOps Environment Configuration
# Operations Coordination System for humanitarian healthcare

# Server Configuration
NODE_ENV=development
PORT=3003
LOG_LEVEL=info

# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=zarish_ops
DATABASE_USER=zarish_ops_user
DATABASE_PASSWORD=secure_password_here
DATABASE_SSL=false
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=15

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=3
REDIS_KEY_PREFIX=zarish:ops:

# Security Configuration
JWT_SECRET=your_jwt_secret_key_here_change_in_production
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=12
SESSION_SECRET=your_session_secret_here

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:4200

# File Upload Configuration (for maps, reports, documents)
UPLOAD_MAX_SIZE=52428800  # 50MB for GIS data and large reports
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,application/pdf,text/csv,application/json,application/vnd.ms-excel,application/vnd.openxmlformats-officedocument.spreadsheetml.sheet
UPLOAD_DESTINATION=./uploads

# Email Configuration (for coordination notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=coordination@zarishsphere.org
EMAIL_PASSWORD=your_email_password_here
EMAIL_FROM=ZarishOps <coordination@zarishsphere.org>

# SMS Configuration (for emergency alerts)
SMS_PROVIDER=twilio
SMS_ACCOUNT_SID=your_twilio_account_sid
SMS_AUTH_TOKEN=your_twilio_auth_token
SMS_FROM_NUMBER=+1234567890

# External Services
ZARISH_CARE_URL=http://localhost:3001
ZARISH_LABS_URL=http://localhost:3002
ZARISH_ANALYTICS_URL=http://localhost:3004
ZARISH_ACCESS_URL=http://localhost:3005
ZARISH_SYNC_URL=http://localhost:3006

# 4W Reporting Configuration
FOURW_REPORTING_FREQUENCY=monthly
FOURW_REMINDER_DAYS_BEFORE=5
FOURW_OVERDUE_ALERT_DAYS=3
FOURW_AUTO_COMPILATION=true

# Emergency Response Configuration
EMERGENCY_ALERT_TIMEOUT=24          # hours before auto-escalation
EMERGENCY_NOTIFICATION_CHANNELS=email,sms,websocket
EMERGENCY_ESCALATION_LEVELS=3
EMERGENCY_AUTO_CLOSE_HOURS=72       # auto-close resolved emergencies

# Resource Management
RESOURCE_ALLOCATION_TIMEOUT=48      # hours for allocation decisions
RESOURCE_MAINTENANCE_ALERT_DAYS=7
RESOURCE_UTILIZATION_THRESHOLD=80   # percentage utilization alert
RESOURCE_AUTO_REALLOCATION=false

# GIS and Mapping Configuration
GIS_ENABLED=true
MAP_TILE_SERVER=https://tile.openstreetmap.org/{z}/{x}/{y}.png
MAP_DEFAULT_CENTER_LAT=21.1793
MAP_DEFAULT_CENTER_LNG=92.1270     # Cox's Bazar coordinates
MAP_DEFAULT_ZOOM=10
GIS_BUFFER_DISTANCE=1000           # meters for proximity calculations

# Coordination Configuration
INTERAGENCY_MEETING_FREQUENCY=weekly
COORDINATION_REPORT_RETENTION_DAYS=1095  # 3 years
PARTNER_ACTIVITY_SYNC_INTERVAL=3600      # seconds
COORDINATION_ALERT_THRESHOLD=5           # concurrent activities before alert

# Activity Planning
ACTIVITY_PLANNING_HORIZON_MONTHS=12
ACTIVITY_APPROVAL_REQUIRED=true
ACTIVITY_BUDGET_TRACKING=true
ACTIVITY_BENEFICIARY_VERIFICATION=true

# Supply Chain Management
SUPPLY_CHAIN_TRACKING=true
SUPPLY_CHAIN_LEAD_TIME_DAYS=30
SUPPLY_CHAIN_BUFFER_PERCENTAGE=20
SUPPLY_CHAIN_VENDOR_MANAGEMENT=true

# Performance Monitoring
ACTIVITY_COMPLETION_THRESHOLD=85    # percentage completion rate
BENEFICIARY_REACH_THRESHOLD=90      # percentage reach rate
BUDGET_UTILIZATION_THRESHOLD=75     # percentage utilization rate
REPORTING_COMPLIANCE_THRESHOLD=95   # percentage compliance rate

# Offline Synchronization
SYNC_ENABLED=true
SYNC_INTERVAL=300                   # seconds between sync attempts
SYNC_BATCH_SIZE=200                 # records per sync batch
SYNC_RETRY_ATTEMPTS=5
SYNC_RETRY_DELAY=10                 # seconds between retries

# Security & Compliance
AUDIT_LOG_RETENTION_DAYS=2555       # 7 years for audit logs
SENSITIVE_DATA_ENCRYPTION=true
CROSS_BORDER_DATA_TRANSFER=true
PARTNER_DATA_SHARING_CONSENT=true

# Performance & Monitoring
ENABLE_METRICS=true
METRICS_PORT=9091
HEALTH_CHECK_TIMEOUT=15             # seconds
REQUEST_TIMEOUT=45                  # seconds for complex operations
MAX_CONCURRENT_CONNECTIONS=2000

# Development & Testing
ENABLE_DEBUG_ROUTES=false
ENABLE_MOCK_DATA=false
TEST_DATABASE_NAME=zarish_ops_test
SWAGGER_ENABLED=false

# Humanitarian Specific
FACILITY_CODE=COX-BAZAR-HUB         # Coordination hub identifier
RESPONSE_CODE=BGD-REFUGEE-2024      # Response operation code
CLUSTER_LEAD_ORGANIZATION=WHO       # Health cluster lead
COORDINATION_LEVEL=country          # local, country, regional, global
EMERGENCY_RESPONSE_MODE=false       # Enable emergency coordination features

# Multi-language Support
DEFAULT_LOCALE=en
SUPPORTED_LOCALES=en,bn,ar,my,fr,es # English, Bengali, Arabic, Myanmar, French, Spanish
TIMEZONE=Asia/Dhaka
DATE_FORMAT=DD/MM/YYYY
TIME_FORMAT=24h

# External API Integrations
HUMANITARIAN_DATA_EXCHANGE=true
HDX_API_KEY=your_hdx_api_key_here
RELIEFWEB_API_ENABLED=true
OCHA_SERVICES_ENABLED=true
WHO_API_INTEGRATION=true

# Analytics Integration
ACTIVITY_ANALYTICS_ENABLED=true
BENEFICIARY_ANALYTICS_ENABLED=true
RESOURCE_ANALYTICS_ENABLED=true
PERFORMANCE_ANALYTICS_ENABLED=true
PREDICTIVE_ANALYTICS_ENABLED=false

# Backup and Recovery
AUTO_BACKUP_ENABLED=true
BACKUP_FREQUENCY=daily
BACKUP_RETENTION_DAYS=90
DISASTER_RECOVERY_MODE=false