# ZarishLabs Environment Configuration
# Laboratory Information Management System for humanitarian healthcare

# Server Configuration
NODE_ENV=development
PORT=3002
LOG_LEVEL=info

# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=zarish_labs
DATABASE_USER=zarish_labs_user
DATABASE_PASSWORD=secure_password_here
DATABASE_SSL=false
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=2
REDIS_KEY_PREFIX=zarish:labs:

# Security Configuration
JWT_SECRET=your_jwt_secret_key_here_change_in_production
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=12
SESSION_SECRET=your_session_secret_here

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:4200

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,application/pdf,text/csv
UPLOAD_DESTINATION=./uploads

# Email Configuration (for notifications and alerts)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=noreply@zarishsphere.org
EMAIL_PASSWORD=your_email_password_here
EMAIL_FROM=ZarishLabs <noreply@zarishsphere.org>

# External Services
ZARISH_CARE_URL=http://localhost:3001
ZARISH_OPS_URL=http://localhost:3003
ZARISH_ANALYTICS_URL=http://localhost:3004
ZARISH_ACCESS_URL=http://localhost:3005
ZARISH_SYNC_URL=http://localhost:3006

# Laboratory Specific Configuration
LAB_DEFAULT_RESULT_RETENTION_DAYS=2555  # 7 years for medical records
LAB_CRITICAL_VALUE_ALERT_TIMEOUT=5      # minutes
LAB_QC_REQUIRED_FREQUENCY=daily         # daily, weekly, monthly
LAB_AUTO_RESULT_VERIFICATION=false      # require manual verification
LAB_BARCODE_FORMAT=CODE128              # barcode standard for specimens

# Quality Control Configuration
QC_NORMAL_CONTROL_TOLERANCE=0.1         # 10% tolerance for normal controls
QC_HIGH_CONTROL_TOLERANCE=0.15          # 15% tolerance for high controls
QC_LOW_CONTROL_TOLERANCE=0.15           # 15% tolerance for low controls
QC_FAILURE_ALERT_THRESHOLD=2            # consecutive failures before alert

# Equipment Management
EQUIPMENT_MAINTENANCE_ALERT_DAYS=30     # days before maintenance due
EQUIPMENT_CALIBRATION_ALERT_DAYS=7      # days before calibration due
EQUIPMENT_WARRANTY_ALERT_DAYS=60        # days before warranty expires

# Reagent Management
REAGENT_EXPIRY_ALERT_DAYS=30            # days before reagent expires
REAGENT_LOW_STOCK_THRESHOLD=10          # minimum stock level alert
REAGENT_AUTO_REORDER=false              # enable automatic reordering

# Offline Synchronization
SYNC_ENABLED=true
SYNC_INTERVAL=300                       # seconds between sync attempts
SYNC_BATCH_SIZE=100                     # records per sync batch
SYNC_RETRY_ATTEMPTS=3
SYNC_RETRY_DELAY=5                      # seconds between retries

# Security & Compliance
AUDIT_LOG_RETENTION_DAYS=2555           # 7 years for audit logs
HIPAA_COMPLIANCE_MODE=true
GDPR_COMPLIANCE_MODE=true
DATA_ENCRYPTION_AT_REST=true
DATA_ENCRYPTION_IN_TRANSIT=true

# Performance & Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_TIMEOUT=10                 # seconds
REQUEST_TIMEOUT=30                      # seconds
MAX_CONCURRENT_CONNECTIONS=1000

# Development & Testing
ENABLE_DEBUG_ROUTES=false
ENABLE_MOCK_DATA=false
TEST_DATABASE_NAME=zarish_labs_test
SWAGGER_ENABLED=false

# Humanitarian Specific
FACILITY_CODE=COX-BAZAR-001             # WHO facility identification code
ORGANIZATION_CODE=MSF                   # Partner organization code
PROJECT_CODE=BGD-001                    # Project identification code
EMERGENCY_MODE=false                    # Enable emergency response features
OFFLINE_PRIORITY_MODE=true              # Prioritize offline capabilities

# Localization
DEFAULT_LOCALE=en
SUPPORTED_LOCALES=en,bn,ar,fr,es        # English, Bengali, Arabic, French, Spanish
TIMEZONE=Asia/Dhaka
DATE_FORMAT=DD/MM/YYYY
TIME_FORMAT=24h